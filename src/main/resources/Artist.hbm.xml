<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

 <hibernate-mapping>
 	<class name="studycase.entities.Artist" table="artists" lazy="false" >
 		<id name="artistId" column="artist_id" type="int">
 			<generator class="increment"/>
 		</id>
 		<property name="artistName" column="artist_name" type="string"/>
 		<set name="albums" table="albums" inverse="true" fetch="select">
 			<key>
 				<column name="artist_id" not-null="true"/>
 			</key>
 			<one-to-many class="studycase.entities.Album"/>
 		</set>
 	</class>
 </hibernate-mapping>